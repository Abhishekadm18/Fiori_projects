<mvc:View controllerName="project2.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <Shell id="shell">
        <App id="app1">
            <pages>
                <Page id="page" title="My Project Ideas: VizFrame Chart in UI5 using local JSON or OData">
                    <content>
                    <VBox id="_IDGenVBox">
                        <RadioButtonGroup id='datasetRadioGroup'>
                            <buttons>
                                <RadioButton id="_IDGenRadioButton1" class='settingsRadio' text="Line" select="onDatasetSelectedLine"/>
                                <RadioButton id="_IDGenRadioButton2" class='settingsRadio' text="Column" select="onDatasetSelecteColumn"/>
                                <RadioButton id="_IDGenRadioButton3" class='settingsRadio' text="Bullet" select="onDatasetSelecteBullet"/>
                                <RadioButton id="_IDGenRadioButton4" class='settingsRadio' text="Area" select="onDatasetSelecteArea"/>
                                <RadioButton id="_IDGenRadioButton5" class='settingsRadio' text="waterfall" select="onDatasetSelecteScatter"/>
                            </buttons>
                        </RadioButtonGroup>
                        <viz:VizFrame id="chartContainer" vizType="line" width="600px" height="400px"/>
                        </VBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

